<%- include("../_partials/header.ejs") %>

<%- include("../_partials/nav.ejs") %>

<div class="vk-container-geral">

  <div class="page-container">

    <div class="vk-pageheader-container">

      <h1>Lista de Jogos</h1>
      <a href="/games/new" class="vk-btn-principal">Novo Jogo</a>

    </div>
    
    <div class="content-container">

      <ul>
        <% if (games.length > 0) { %>
      
          <% games.forEach(game => { %>
            <li>
              #<%= game.id %> - <%= game.name %>
              <form action="/games/delete" method="post" id="<%= game.id %>">
                <input type="hidden" name="id" value="<%= game.id %>">
                <input type="hidden" name="url_cover" value="<%= game.url_cover %>">
                <button type="submit" class="deleteGameBtn">Deletar</button>
              </form>
            </li>
          <% }); %>
      
        <% } else { %>
      
          <li>Ainda não há jogos cadastrados.</li>
      
        <% } %>
      </ul>

    </div>
    
  </div>

</div>

<%- include("../_partials/footer.ejs") %>
